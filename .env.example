# Copy this file to `.env` and edit values as needed. Values here mirror defaults used in `application.properties`.
# Do NOT commit secrets (this file is safe as an example but replace values with real secrets in your environment).

# Database
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/ourvoiceourrights?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=password

# DataGov API
DATA_GOV_API_KEY=your-data-gov-api-key-here

# Ingestion
INGEST_LIMIT=100
INGEST_SCHEDULE_CRON="0 0 */6 * * *"
INGEST_MAX_RETRIES=5

# Cache provider: caffeine or redis
CACHE_PROVIDER=caffeine

# Redis (if using redis cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# GeoIP2 DB (path to GeoLite2-City.mmdb)
GEOIP2_DB_PATH=

# Reverse geocode base URL (optional)
REVERSE_GEOCODE_BASE=

# Rate limiting
RATE_LIMIT_RPM=120
